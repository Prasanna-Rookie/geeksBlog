<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css" />
    <title>Post-Creation</title>
</head>
<%- include("partials/header.ejs") %>
<div class="container">
    <div class=" text-center mt-5 ">

        <h1 >Make your Own Post</h1>
            
        
    </div>


<div class="row ">
  <div class="col-lg-7 mx-auto">
    <div class="card mt-2 mx-auto p-4 bg-light">
        <div class="card-body bg-light">
   
        <div class = "container">
                         <form action="/submit" method="POST" enctype="multipart/form-data" id="contact-form" role="form">

        

        <div class="controls">

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="form_name">Title *</label><br>
                        <input id="form_name" type="text" name="title" class="form-control" placeholder="Please enter your Title *" required="required" data-error="Title is required.">
                        
                    </div>
                </div>
            </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="form_message">Content *</label><br>
                        <textarea id="form_message" name="content" class="form-control" placeholder="Write your message here." rows="4" required="required" data-error="Please, leave us a message."></textarea
                            >
                        </div>

                    </div>

                    <!-- code for file uploads -->
                    <div class="mb-3">
                        <br>
                        <label for="image" class="form-label">Featured Image</label>
                        <div class="image-upload-container">
                            <div class="mb-4 d-flex justify-content-center">
                                <img id="selectedImage" src="/uploads/placeholder.jpg" 
                                     alt="Preview will appear here" class="img-preview">
                            </div>
                            <div class="d-flex justify-content-center">
                                <div class="btn btn-primary btn-rounded position-relative overflow-hidden">
                                    <label class="form-label text-white m-1" for="image">Choose file</label>
                                    <input type="file" id="thumbnail" name="thumbnail" 
                                           class="position-absolute top-0 end-0 start-0 bottom-0 opacity-0" 
                                           accept="image/*" onchange="previewImage(this)">
                                </div>
                            </div>
                        </div>
                    </div>

<!-- code end here -->
                <div class="d-flex justify-content-center col-md-12">
                    
                    <input type="submit" class="btn btn-success btn-send  p-2 btn-block 
                        " value="Post" >
                
            </div>
            </div>


    </div>
     </form>
    </div>
        </div>


</div>
    <!-- /.8 -->

</div>
<!-- /.row-->

</div>
</div>
<br><br><br><br><br>

  <%- include("partials/footer.ejs") %>
<script>
    function previewImage(input) {
        const preview = document.getElementById('selectedImage');
        const file = input.files[0];
        
        if (file) {
            const reader = new FileReader();
            
            reader.onload = function(e) {
                preview.src = e.target.result;
                preview.classList.add('uploaded-image');
            }
            
            reader.readAsDataURL(file);
        } else {
            preview.src = "/uploads/placeholder.jpg";
            preview.classList.remove('uploaded-image');
        }
    }
</script>

</html>